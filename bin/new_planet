#!/usr/bin/env ruby

$LOAD_PATH << File.expand_path("../../lib", __FILE__)

require 'planet_math'

planet = Planet.new()

puts "Scanners show the planet to be #{planet.radius * 2} kilometers in diameter."
puts "Gravity measures at #{planet.gravity} standard."
puts "Initial UWP recorded as #{planet.uwp}."

# Sample output
# $ bin/new_planet 
# Scanners show the planet to be 14400 kilometers in diameter.
# Gravity measures at 1.25 standard.
# Initial UWP recorded as X9A5000.
